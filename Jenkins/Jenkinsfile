pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'NodeJS'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
        GITHUB_TOKEN = credentials('github-token')
        SNYK_API_TOKEN = credentials('snyk-api-token')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', 
                    credentialsId: 'github-token', 
                    url: 'https://github.com/hoaroy/funori.git'
            }
        }
        stage('Install Snyk') {
            steps {
                powershell 'npm install -g snyk'
            }
        }
        stage('Run Static Analysis with Snyk') {
            steps {
                withEnv(["SNYK_TOKEN=${SNYK_API_TOKEN}"]) {
                    powershell 'snyk test'
                }
            }
       // stage('Install Dependencies') {
        //    steps {
           //     powershell 'npm install'
            //}
        //}
        //stage('Run ESLint') {
         //   steps {
          //      powershell 'npx eslint .'
         //   }
       // }
        //stage('Run Tests') {
         //   steps {
          //      powershell 'npm test'
           // }
        //}
        stage('Static Analysis with Snyk') {
            steps {
                powershell 'npx snyk code test'
            }
        }
    }
}
