pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/hoaroy/funori.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Security Scan') {
            steps {
                sh 'npx snyk test'
            }
        }

        stage('Run Linter & Tests') {
            steps {
                sh 'npm run lint'
                sh 'npm test'
            }
        }
    }
}
