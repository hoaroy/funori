pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/hoaroy/funori.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''C:/Program Files/Git/bin/bash.exe -c "npm install"'''
            }
        }

        stage('Run Security Scan') {
            steps {
                sh '''C:/Program Files/Git/bin/bash.exe -c "npx snyk test"'''
            }
        }

        stage('Run Linter & Tests') {
            steps {
                sh '''C:/Program Files/Git/bin/bash.exe -c "npm run lint"'''
                sh '''C:/Program Files/Git/bin/bash.exe -c "npm test"'''
            }
        }
    }
}
