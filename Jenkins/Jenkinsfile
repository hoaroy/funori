pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'NodeJS'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
        GITHUB_TOKEN = credentials('github-token')
       // SNYK_API_TOKEN = credentials('snyk-api-token')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', 
                    credentialsId: 'github-token', 
                    url: 'https://github.com/hoaroy/funori.git'
            }
        }
        stage('Static Code Analysis with Snyk') {
            steps {
                sh 'snyk code test --severity-threshold=high || true' // Kiểm tra mã nguồn với Snyk
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying static files...'
                sh 'cp -r * /path/to/deploy/location' 
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
        }
    }
}
